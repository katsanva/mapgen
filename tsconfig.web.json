{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "pretty": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "paths": {
      "*": ["*", "node_modules/*", "typings/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*", "typings/**/*"]
}
